@model IEnumerable<Contracts.DTOs.ProductDto>
@{
    ViewData["Title"] = "PII Obfuscation Portal - Products";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">PII Obfuscation Portal</h1>
            
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Error
                </div>
            }
            
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Products</h2>
                </div>
                <div class="card-body">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Database Technology</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@product.Name</strong>
                                            </td>
                                            <td>@(product.Description ?? "No description")</td>
                                            <td>
                                                <span class="badge bg-primary">@product.DatabaseTechnology</span>
                                            </td>
                                            <td>
                                                @if (product.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td>@product.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <a href="@Url.Action("ProductMappings", "Home", new { id = product.Id })" 
                                                   class="btn btn-primary btn-sm">
                                                    View Mappings
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <p class="text-muted">No products found.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table th {
            background-color: #f8f9fa;
            border-top: none;
        }
        
        .badge {
            font-size: 0.8em;
        }
        
        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }
    </style>
}
