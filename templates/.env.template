# Environment Configuration Template
# Copy this file to .env and update with your values

# Database Connection
DB_SERVER=localhost
DB_NAME=YourDatabase
DB_USER=sa
DB_PASSWORD=YourPassword123!
DB_INTEGRATED_SECURITY=false

# Obfuscation Settings
GLOBAL_SEED=YourUniqueSecretSeed2024
BATCH_SIZE=1000
PARALLEL_THREADS=8
MAX_CACHE_SIZE=500000

# Environment
ENVIRONMENT=development
DRY_RUN=false
LOG_LEVEL=Information

# Paths
MAPPING_CACHE_DIR=mappings/development
REPORT_PATH=reports/development
AUDIT_PATH=audit/development

# Performance
COMMAND_TIMEOUT=300
CONNECTION_POOL_SIZE=20
MAX_MEMORY_MB=4096

# Security
ENABLE_AUDIT=true
ENCRYPT_MAPPINGS=false
HASH_SENSITIVE_DATA=false